{
  "manifest_version": 3,
  "name": "Selective sidepanel per tab",
  "version": "0.1.0",
  "description": "The extension opens a side panel selectively for a tab. Other tabs are not affected.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to Open Panel"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "scripting",
    "sidePanel",
    "activeTab"
  ]
}